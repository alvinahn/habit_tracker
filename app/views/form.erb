<script>
function validateForm() {
  var x = document.forms["update_habit_days"]["start_in_days"].value;
  if(x < 0) {
    alert("Days must be greater than 0");
    return false;
  }
  else if(isNaN(x)) {
    alert("Days must be a number");
    return false;
  }
  return true;
}
</script>

<form id="update_habit_days" method="POST", action="/profile/decision", onsubmit="validateForm()">
  <q>I, <%= session[:first_name] %> <%= session[:last_name] %>, would like to develop the habit of 
    <input type="text" name="habit_name"> starting 
    <input type="text" name="start_in_days" list="days">
    <datalist id="days">
      <option value="0">Today</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      <option value="6">A Week</option> 
    </datalist> day(s) from now</q>
  <br>
    <input type="submit" name="decision" value="I'm Commited">
    <input type="submit" name="decision" value="I Changed My Mind">
</form>






