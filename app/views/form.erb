<script>
function validateForm() {
  var decision = document.forms["add_habit"]["decision"].value;
  var days = document.forms["add_habit"]["start_in_days"].value;

  if(decision == "I'm Commited") {
    if(days == null || days == "") {
      alert("# of days must be filled out.");
      return false;
    }
    else if(isNaN(days)) {
      alert("# of days must be a number.");
      return false;
    }
    else if(days < 0 || (days % 1 !== 0)) {
      alert("# of days must be a positive whole number.");
      return false;
    }
    else return true;
  }
  else return true;
}
</script>
