<div class="page">
  <!-- Responsive calendar - START -->
  <p><strong>Today:</strong> <%= Date.today.strftime("%b %-d, %Y") %></p>
  <div class="responsive-calendar">
    <div class="controls">
        <a class="pull-left" data-go="prev"><div class="btn"><i class="icon-chevron icon-chevron-rotate"></i></div></a>
        <h4><span data-head-year></span> <span data-head-month></span></h4>
        <a class="pull-right" data-go="next"><div class="btn"><i class="icon-chevron"></i></div></a>
    </div><hr/>
    <div class="day-headers">
      <div class="day header">Mon</div>
      <div class="day header">Tue</div>
      <div class="day header">Wed</div>
      <div class="day header">Thu</div>
      <div class="day header">Fri</div>
      <div class="day header">Sat</div>
      <div class="day header">Sun</div>
    </div>
    <div class="days" data-group="days">
      <!-- the place where days will be generated -->
    </div>
  </div>
  <!-- Responsive calendar - END -->
  <!-- Placeholder -->
  <div class="responsive-calendar-placeholder">
    
  </div>
  <br>
    <div class="button -green"><a class="sign_out_a" href="/form">Create a New Habit</a></div>
    <div class="button -yellow"><a class="sign_out_a" href="/profile">Back to Profile Page</a></div>
    <div class="button -salmon"><a class="sign_out_a" href="profile/signout">Delete current habit</a></div>
    <% date_diff = (Date.today - @habit.start_date).to_i
    if date_diff >= 21
      delete_submit_value = "Delete from record"
    elsif date_diff >= 0
      delete_submit_value = "I give up"
    else
      delete_submit_value = "Forget it"
    end %>
  <form method = "POST" action="/profile/delete">
    <input type="hidden" name="habit_id" value="<%= @habit.id %>">
    <input type="submit" value="<%= delete_submit_value %>">
  </form>
</div>